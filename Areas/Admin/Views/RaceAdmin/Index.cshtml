@model IEnumerable<DyreInternatApp.Models.Race>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Opret ny</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RaceName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
                 <td>
                     @Html.DisplayFor(modelItem => item.Species.SpeciesName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RaceName)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RaceId">Ændre</a> |
                <a asp-action="Details" asp-route-id="@item.RaceId">Detaljer</a> |
                <a asp-action="Delete" asp-route-id="@item.RaceId">Slet</a>
            </td>
        </tr>
}
    </tbody>
</table>
